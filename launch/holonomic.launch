<launch>

    <arg name="model" default="$(find urdf_sim_tutorial)/urdf/holo.urdf.xacro"/>
    <arg name="rvizconfig" default="$(find urdf_tutorial)/rviz/urdf.rviz" />

    <include file="$(find urdf_sim_tutorial)/launch/gazebo.launch">
        <arg name="model" value="$(arg model)" />
    </include>

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" />

    <!-- <rosparam command="load"
        file="$(find urdf_sim_tutorial)/config/holonomicdrive.yaml"
        ns="holonomic_drive_controller" /> -->

    <rosparam command="load"
        file="$(find urdf_sim_tutorial)/config/wheel.yaml"
        ns="wheel_controller" />

    <node name="r2d2_controller_spawner" pkg="controller_manager" type="spawner"
        args="wheel_controller 
         --shutdown-timeout 3"/>

</launch>